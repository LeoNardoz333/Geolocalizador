<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textAdministradores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text="Administradores"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/etUsuarioAdmin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:inputType="text"
        android:hint="Usuario"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etPasswordAdmin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:inputType="text"
        android:hint="ContraseÃ±a"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnIngresarAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/verdeCenizaOscuro"
        android:text="INGRESAR" />
</FrameLayout>